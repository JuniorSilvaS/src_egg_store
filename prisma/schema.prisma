generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("CONNECT_DATA_BASE")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  password  String

  addresses Address[]   // ðŸ‘ˆ user can have many addresses
  purchases Purchase[]  // ðŸ‘ˆ user can make many purchases
}

model Address {
  id          Int       @id @default(autoincrement())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])

  addressLine String
  city        String
  state       String
  postalCode  String
  country     String

  purchases   Purchase[]  // ðŸ‘ˆ add this line!
}


model Product {
  id        Int         @id @default(autoincrement())
  name      String
  price     Float
  quantity  Int

  purchases Purchase[]
}

model Purchase {
  id         Int       @id @default(autoincrement())
  userId     Int
  productId  Int
  addressId  Int
  quantity   Int
  createdAt  DateTime  @default(now())

  user       User      @relation(fields: [userId], references: [id])
  product    Product   @relation(fields: [productId], references: [id])
  address    Address   @relation(fields: [addressId], references: [id])
}
